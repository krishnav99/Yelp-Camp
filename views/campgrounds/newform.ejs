<%- include("../partials/header") %>
	

	<!-- styling of the forms -->

	<div class="container">
		<div class="row">
			<h3 style="text-align: center;">Create New Campground</h3>
			<div style="width: 30%;margin: 30px auto;">
				<form action="/campgrounds" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="campground[name]" placeholder="Name of campground" required>
					</div>
					<div class="form-group">
						<input class="form-control" type="number" name="campground[price]" placeholder="ammount" min="0.1" step="0.1" required>
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="campground[image]" placeholder="Image url" required>
					</div>
					<div class="form-group">
						<textarea class = "form-control" name="campground[description]" placeholder="description" rows="6"></textarea>
					</div>
					<div class="form-group">
						<button class="btn btn-md btn-success btn-block">Submit</button>
					</div>
				</form>
				<a href="/campgrounds">Go Back</a>
			</div>
		</div>
	</div>




	<%- include("../partials/footer") %>